# Database - Prisma.io Cloud Database (Replace with your actual database URL)
DATABASE_URL="postgres://your-username:your-password@db.prisma.io:5432/postgres?sslmode=require"

# Alternative: Local PostgreSQL (comment out the cloud URL above and uncomment below)
# DATABASE_URL="postgresql://postgres:@localhost:5432/swiftpost_db?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (Update this to your frontend URL in production)
CORS_ORIGIN=http://localhost:5173

# JWT Secret (Generate a secure secret for production)
JWT_SECRET=your-secret-key-here-change-in-production

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:5173